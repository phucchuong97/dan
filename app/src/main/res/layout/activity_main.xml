<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txtstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
/>

    <ImageButton
        android:id="@+id/btnUnlock"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:onClick="handlingUnlock"
        app:srcCompat="@android:drawable/ic_secure" />

    <Button
        android:id="@+id/btnAddFingerPrint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Finger Print"
        android:onClick="handlingAddFingerPrint"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FingerPrint Information"
        android:onClick="handlingPeopleInfor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History"
        android:onClick="handlingHistory"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="handlingReset"
        android:text="Delete All FingerPrint"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="handlingChangeUnlockPin"
        android:text="Change unlock PIN"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:visibility="invisible" />

</LinearLayout>